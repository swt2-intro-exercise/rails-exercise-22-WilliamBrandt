<p style="color: green"><%= notice %></p>

<%= render @paper %>

<% if @paper.authors.any? %>
  <div>
    <strong>Authors:</strong>
    <ul>
      <% @paper.authors.each do |author| %>
        <li><%= author.name %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div>
  <%= link_to "Edit this paper", edit_paper_path(@paper) %> |
  <%= link_to "Back to papers", papers_path %>

  <%= button_to "Destroy this paper", @paper, method: :delete %>
</div>
